{
  "compilerOptions": {
    "module": "ESNext",
    "target": "es2020",
    "outDir": "dist",
    "strict": false,
    "rootDir": "src",
    "sourceMap": true,
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src"
  ]
}